<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:backgroundTint="@color/orange"
    tools:context=".about_namn_pa_bingo">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:text="Om man vill låsa deltagarna till en runda så sök rundan och välj den."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:text="Man kan skapa en egen runda genom att: tryck Back, tryck Back, tryck LOGIN, tryck SKRIVRÄTTIGHET, tryck LOGOUT, tryck SKAPA RUNDA, tryck Back, tryck Back, tryck VÄLJ PROMENAD, tryck SKAPA RUNDA, skriv ett namn på rundan. Gå rundan och spara 12 koordinater på vägen. Lägg rundans namn på minnet. Detta namn kan nu anvädas till att koppla till en bingobricka. Sök upp namnet på rundan."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />
</androidx.constraintlayout.widget.ConstraintLayout>